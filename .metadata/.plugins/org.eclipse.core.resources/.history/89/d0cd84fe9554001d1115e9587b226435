package hello;

import java.util.Scanner;
/**
* @author Diego
*/

public class hello {
	
		public static void main(String args[]) {
		
			int number1, number2, number3, soma;
		
			Scanner entrada = new Scanner(System.in);
			
			for(int i = 0; i < 1; i++) {
				System.out.println("Digite O primeiro numero");
				number1 = entrada.nextInt();
				System.out.println("Digite O segundo numero");
				number2 = entrada.nextInt();
				System.out.println("Digite O terceiro numero");
				number3 = entrada.nextInt();
				
				soma = number2 + number3;
				System.out.println("A soma dos dois ultimos digito é: " + soma);
				
				if (number1 < soma) {
				
					System.out.println("Valor do numero :" + number1 +"é menor que a soma dos ultimos 2: " + soma);
					
				}else {
					System.out.println("A Soma dos ultimos 2 numeros: " + soma + " é maior que o primeiro: " + number1);
				};
				
			};
			entrada.close();
	
		};
};